<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IOT_Controller.ControllersModels"
             xmlns:viewModels="clr-namespace:IOT_Controller.DesignView"
             x:Class="IOT_Controller.DesignView.MqttStatusConnexion">

    <ContentView.BindingContext>
        <local:MainViewModel/>
    </ContentView.BindingContext>

    <StackLayout>
        <Frame x:Name ="MqttStatusConnexion"
               BackgroundColor="LightGray"
               IsVisible ="False"/>
        <Label TextColor="Black"
               Text="{Binding ConnectingMesage}"/>
    </StackLayout>

</ContentView>
    