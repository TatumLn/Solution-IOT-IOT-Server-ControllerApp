<?xml version="1.0" encoding="utf-8" ?>
<local:BaseContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IOT_Controller.ViewsModels"
             x:Class="IOT_Controller.Views.Desktop.DesktopView_Home">

    <local:BaseContentPage.BindingContext>
        <local:CarrouselModels/>
    </local:BaseContentPage.BindingContext>

    <AbsoluteLayout>
        <CarouselView   
     AbsoluteLayout.LayoutFlags="All"
     AbsoluteLayout.LayoutBounds="0,0,1,1"
     ItemsSource="{Binding BackgroundImages}">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" 
                    Aspect="AspectFill" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </AbsoluteLayout>


</local:BaseContentPage>