<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:IOT_Controller.ViewsModels"
             xmlns:views="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:IOT_Controller.DesignView"
             x:Class="IOT_Controller.Views.Mobile.MobileView_Home">

    <ContentPage.BindingContext>
        <local:CarrouselModels/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <!--Modele-->
        <DataTemplate x:Key="DefaultTemplate">
            <Image Source="{Binding}" Aspect="AspectFill" />
        </DataTemplate>
        
        <DataTemplate x:Key="settingPage">
            <viewModels:SettingPageUI/>
        </DataTemplate>
        
        <DataTemplate x:Key="default">
            <Frame WidthRequest="10" HeightRequest="10" BackgroundColor="#D9D9D9" CornerRadius="5"/>
        </DataTemplate>

        <DataTemplate x:Key="settingIndicateur">
            <Image Source="setting.svg" WidthRequest="10" HeightRequest="10"/>
        </DataTemplate>

        <!--Selecteur de modele-->
        <!-- Selecteur de modèle de données -->
        <local:SettingTemplateSelector x:Key="CarouselTemplateSelector"
                                            DefaultTemplate="{StaticResource DefaultTemplate}"
                                            LastPageTemplate="{StaticResource settingPage}" />
        <local:SettingIndicatorSelector x:Key="IndicateurTemplateSelector" 
                                         DefaultIndicateur="{StaticResource default}"
                                         LastIndicateur="{StaticResource settingIndicateur}"/>
    </ContentPage.Resources>

    <ContentPage.Content>
        <AbsoluteLayout x:Name="absoluteLayout">
            <CarouselView   
            AbsoluteLayout.LayoutFlags="All"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            ItemsSource="{Binding BackgroundImages}"
            ItemTemplate="{StaticResource CarouselTemplateSelector}"
            Position="{Binding Position}">
            </CarouselView>

            <Grid x:Name="monGrid" 
                  IsVisible="{Binding IsDefaultPage}"
                  AbsoluteLayout.LayoutFlags="All"
                  AbsoluteLayout.LayoutBounds="0,0,1,1">
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="85"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="90"/>
                    <RowDefinition Height="30"/>
                    
                </Grid.RowDefinitions>
                
                <Grid x:Name="HeaderFrame" 
                       Grid.Row="0">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackLayout Grid.Column="0"
                                 Margin="0,20,0,0">
                        <Label TextColor="White"
                               FontFamily="Inter"
                               FontSize="15"
                               Margin="10,8"
                               HorizontalOptions="Start"
                               VerticalOptions="Start">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding NbrDevice}" 
                                          TextColor="OrangeRed"/>
                                    <Span Text=" Appareil : " 
                                          TextColor="White"/>
                                    <Span Text="{Binding NbrBtnActive}"
                                          TextColor="OrangeRed"/>
                                    <Span Text=" Actif" 
                                          TextColor="White"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal"
                                 Grid.Column="1"
                                 Margin="80,20,11,0"
                                 HorizontalOptions="EndAndExpand"
                                 Spacing="12">
                        <CollectionView ItemsSource="{Binding BtnImgHeader}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Horizontal"
                                                     HorizontalItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeShape="RoundRectangle 40"
                                                BackgroundColor="#D9D9D9"
                                                VerticalOptions="Start"
                                                HeightRequest="35"
                                                WidthRequest="35">
                                        <ImageButton Source="{Binding}"
                                                     HeightRequest="22"
                                                     VerticalOptions="Center" />
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </Grid>
                <Label x:Name="monLabel"
                       Grid.Row="1" 
                       Text="{Binding PositionText}"
                       FontFamily="Italiana" 
                       FontSize="60" 
                       TextColor="#8C8888" 
                       HorizontalOptions="Center" 
                       VerticalOptions="FillAndExpand"/>

                <StackLayout x:Name="Circle"
                      Grid.Row="2"
                      HorizontalOptions="Center"
                      VerticalOptions="FillAndExpand">
                    <viewModels:TroisCercleIndicateur/>
                </StackLayout>

                <Button Style="{StaticResource BouttonStyle1}"
                        Grid.Row="4"
                        Text="Ajuster"
                        VerticalOptions="FillAndExpand"
                        Clicked="AfficherPopup"/>
            </Grid>

            <IndicatorView x:Name="indicateur"
                           AbsoluteLayout.LayoutFlags="None"
                           AbsoluteLayout.LayoutBounds="160,700,100,15"
                               IndicatorColor="#1E1E1E47"
                               SelectedIndicatorColor="#EAFD0E"
                               IndicatorSize="10"
                               ItemsSource="{Binding BackgroundImages}"
                               Position="{Binding Position}"
                               VerticalOptions="FillAndExpand">
                <!--IndicatorTemplate="{StaticResource IndicateurTemplateSelector}"-->
            </IndicatorView>
            <!-- Popup (initialement invisible) -->
            <viewModels:PopUp x:Name="popup" IsVisible="{Binding IsPopupVisible}"/>

        </AbsoluteLayout>
    </ContentPage.Content>

</ContentPage>
    